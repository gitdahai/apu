<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/edit_cornor"
    >
    
   <ImageView 
       android:id="@+id/headImage"
       android:layout_width="50dip"
       android:layout_height="50dip"
       android:background="@drawable/moren4"
       android:layout_margin="10dip"
       />   
    
  <TextView 
      android:id="@+id/text_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="完成办公室15分钟训练计划又进了一步"
      android:lines="2"
      android:layout_toRightOf="@id/headImage"
      android:textSize="16sp"
      android:layout_alignTop="@id/headImage"
      android:layout_marginTop="5dip"
      android:layout_marginRight="30dip"
      />
    
   <ImageView 
       android:id="@+id/image_close"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/icon_close"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:layout_margin="6dip"
       />
  
    <FrameLayout 
         android:id="@+id/frameLayout"
         android:layout_width="110dip"
         android:layout_height="115dip"
         android:layout_gravity="center"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/text_title"
         >
      
      <com.uphealth.cn.widget.ProgressBarView1
        android:id="@+id/progressBarViewOne"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        />
      
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/leaf_01"
          android:layout_gravity="center"
          />
      
  </FrameLayout>   
  
    
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/frameLayout"
            android:orientation="vertical"
            android:background="@drawable/edit_cornor_three" >
      
     <View 
         android:layout_width="match_parent"
         android:layout_height="1dip"
         android:background="@color/line_two"
         />    

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dip"
            android:orientation="horizontal" >
      
      <TextView 
          android:id="@+id/text_share" 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="分享到朋友圈"
          android:textSize="18sp"
          android:textColor="@color/black"
          android:gravity="center"
          />   
          
     <View 
         android:layout_width="1dip"
         android:layout_height="match_parent"
         android:background="@color/line_two"
         />
         
      <TextView 
          android:id="@+id/text_public"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"  
          android:text="发布训练结果"
          android:textSize="18sp"
          android:textColor="@color/text_main"
          android:gravity="center"  
          />    

            
        </LinearLayout>
    </LinearLayout>
    
  

</RelativeLayout>
