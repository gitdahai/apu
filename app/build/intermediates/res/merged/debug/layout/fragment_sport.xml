<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme_color"
    >
    
    <com.uphealth.cn.widget.refresh.PullToRefreshView 
        android:id="@+id/main_pull_refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dip"
        android:layout_weight="1"
        android:background="#00000000"
      > 
    
 <ScrollView 
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >
 
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:orientation="vertical"
      >
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="130dip"
       android:background="@color/white"
       >
       
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12000步"
        android:drawableLeft="@drawable/icon_step"
        android:gravity="center"
        android:layout_marginTop="24px"
        android:layout_marginLeft="15dip"
        android:drawablePadding="3dip"
        android:textColor="@color/text_main"
        />   
        
    <FrameLayout 
         android:layout_width="110dip"
         android:layout_height="115dip"
         android:layout_gravity="center"
         android:layout_centerHorizontal="true"
         >
      
      <com.uphealth.cn.widget.ProgressBarView1
        android:id="@+id/progressBarViewOne"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        />
      
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/leaf_01"
          android:layout_gravity="center"
          />
      
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="塑形"
          android:gravity="center"
          android:layout_gravity="center|bottom"
          android:layout_marginTop="10px"
          />
      
  </FrameLayout>   
       
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="共7天"
       android:background="@drawable/day_one"
       android:layout_marginTop="24px"
       android:layout_marginBottom="30px"
       android:gravity="center|right"
       android:textColor="@color/white"
       android:textSize="16sp"
       android:paddingRight="40px"
       android:layout_alignParentRight="true"
       />
       
   </RelativeLayout>
   
    <!-- 资讯第一条 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/edit_cornor"
        android:layout_margin="10dip"  
        >
      
   <TextView 
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能量早餐，减肥也要吃饱饱"
        android:layout_margin="10dip"
        android:textSize="16sp"
        />
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="140dip"
        >
        
    <ImageView 
        android:id="@+id/first_image"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:background="@drawable/moren1"
        android:scaleType="fitXY"
        />    
        
     <LinearLayout 
        android:id="@+id/first_tag_layout"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_margin="20dip"
        >
        
    </LinearLayout>
        
    </FrameLayout>
        
    </LinearLayout>
    
    <!-- 运动场景 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_cornor"
        android:gravity="center"
        android:id="@+id/layout_scene"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"  
        android:padding="15dip"
        >
    </LinearLayout>
    
	 <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@color/theme_color"  
	    android:layout_marginLeft="10dip"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="10dip"
	    >
	    
	 <TextView 
	       android:id="@+id/up_plan"
	       android:layout_width="match_parent"
	       android:layout_height="@dimen/setting_text_height"
	       android:text="寻找更多阿噗运动"
	       android:drawableRight="@drawable/arrows"
	       android:gravity="center|left"
	       android:paddingLeft="15dip"
	       android:textSize="16sp"  
	       android:background="@drawable/edit_cornor"   
	       />   
	
	  </LinearLayout>   
	      
      
     <com.uphealth.cn.widget.MyListView 
         android:id="@+id/listView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:dividerHeight="10dip"  
         android:divider="@color/theme_color"
         android:layout_margin="10dip"
         ></com.uphealth.cn.widget.MyListView> 
     
     </LinearLayout>   
 </ScrollView>   
    
  </com.uphealth.cn.widget.refresh.PullToRefreshView> 

</LinearLayout>
