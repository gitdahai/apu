<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme_color"  
    >
    
     <com.uphealth.cn.widget.refresh.PullToRefreshView 
        android:id="@+id/main_pull_refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dip"
        android:layout_weight="1"
        android:background="#00000000"
      > 
    
 <ScrollView 
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >
 
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:orientation="vertical"
      >   
      
   <!-- 上面 -->  
    
     <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="right"
       android:background="@color/white"
       >
       
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="共7天"
       android:background="@drawable/day_one"
       android:layout_marginTop="24px"
       android:gravity="center|right"
       android:textColor="@color/white"
       android:textSize="16sp"
       android:paddingRight="40px"
       />    
       
   </LinearLayout>    
       
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:paddingLeft="20px"
       android:paddingRight="20px"
       android:paddingBottom="20px"
       android:background="@color/white"  
       >
       
   <FrameLayout 
         android:layout_width="100dip"
         android:layout_height="115dip"
         android:layout_gravity="center|top"
         android:layout_weight="1"
         >
      
      <com.uphealth.cn.widget.ProgressBarView1
        android:id="@+id/skinAcne_progress"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        />
      
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/beaufy_01"
          android:layout_gravity="center"
          />
      
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="祛痘"
          android:gravity="center"
          android:layout_gravity="center|bottom"
          android:layout_marginTop="10px"
          />
      
  </FrameLayout>  
  
    <FrameLayout 
         android:layout_width="100dip"
         android:layout_height="115dip"
         android:layout_gravity="center|top"
         android:layout_weight="1"  
         >
      
      <com.uphealth.cn.widget.ProgressBarView1
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:id="@+id/skinWhite_progress"  
        />
      
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/beauty_02"
          android:layout_gravity="center"
          />
   
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美白"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="10px"
        />  
      
  </FrameLayout>  
  
   <FrameLayout 
         android:layout_width="100dip"
         android:layout_height="115dip"
         android:layout_gravity="center|top"
         android:layout_weight="1"  
         >
      
      <com.uphealth.cn.widget.ProgressBarView1
        android:id="@+id/skinWater_progress"      
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        />
      
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/beauty_03"
          android:layout_gravity="center"
          />
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="补水"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="10px"
        />     
      
  </FrameLayout>  

    <FrameLayout 
         android:layout_width="100dip"
         android:layout_height="115dip"
         android:layout_gravity="center|top"
         android:layout_weight="1"
         >
      
      <com.uphealth.cn.widget.ProgressBarView1
        android:id="@+id/skinAntiAging_progress"      
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        />
      
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/beauty_04"
          android:layout_gravity="center"
          />
      
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="衰老"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="10px"
        />   
      
  </FrameLayout>  
    
    </LinearLayout> 
    
   <!-- 上面 --> 
    
  <LinearLayout 
      android:id="@+id/layout_skin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="10dip"
      android:background="@drawable/edit_cornor"
      >
      
      <TextView 
        android:id="@+id/text_name_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能量早餐，减肥也要吃饱饱"
        android:layout_margin="10dip"
        android:textSize="16sp"
        />
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="140dip"
        >
        
    <ImageView 
        android:id="@+id/image_skin"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:scaleType="fitXY"
        android:background="@drawable/moren6"
        />    
        
     <LinearLayout 
        android:id="@+id/tag_layout"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_margin="20dip"
        >
         
     </LinearLayout>
    
    </FrameLayout>  
      
    <!-- 查看详情 -->
    <LinearLayout 
        android:id="@+id/layout_skin_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
     
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="深度清洁  睡眠保湿"
        android:gravity="center"
        android:layout_margin="10dip"
        android:textSize="16sp"
        /> 
    
    <com.uphealth.cn.widget.MyGridView 
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="10dip"
        android:horizontalSpacing="10dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dip"
        ></com.uphealth.cn.widget.MyGridView>
    
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        >
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:gravity="center"
        >
        
   <TextView
        android:id="@+id/text_publish"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:text="发布#护肤#"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginRight="10dip"
        android:background="@drawable/button_gray"
        android:textSize="16sp"
        />        
        
    </LinearLayout>    
        
   
    <LinearLayout 
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/button_gray"
        >
        
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:text="查看详情"
        android:drawableLeft="@drawable/icon_details"
        android:textSize="16sp"
        android:gravity="center"
        android:drawablePadding="10dip"
        />        
        
    </LinearLayout>    
    </LinearLayout>
    
    </LinearLayout>
    
      
      
  </LinearLayout>  
    
      
    <!-- 美妆场景 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_cornor"
        android:gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"  
        android:padding="10dip"
        >
    
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="美妆"
         android:gravity="left"
         android:layout_marginBottom="10dip"
         android:textSize="16sp"
         />   
    
     <com.uphealth.cn.widget.MyGridView 
        android:id="@+id/gridViewAdorn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="10dip"
        android:horizontalSpacing="10dip"
        ></com.uphealth.cn.widget.MyGridView>   
        
        
    </LinearLayout>
      
      
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@color/theme_color"
         android:layout_margin="10dip"
         >
     
   <TextView 
       android:id="@+id/text_more_skin"
       android:layout_width="match_parent"
       android:layout_height="@dimen/setting_text_height"
       android:text="寻找更多阿噗护肤"
       android:drawableRight="@drawable/arrows"
       android:gravity="center|left"
       android:paddingLeft="15dip"
       android:textSize="16sp"  
       android:background="@drawable/edit_cornor"   
       />         
         
     </LinearLayout> 
      
       <com.uphealth.cn.widget.MyListView 
         android:id="@+id/listView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:layout_marginBottom="10dip"
         ></com.uphealth.cn.widget.MyListView> 
      
     
     </LinearLayout>   
 </ScrollView>   
    
   </com.uphealth.cn.widget.refresh.PullToRefreshView>    

</LinearLayout>
