<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme_color"
    >
    
   <include layout="@layout/title_common"/>
   
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
      
    
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="100dip"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_marginTop="20dip" 
       >
       
   <com.uphealth.cn.widget.CircularImage 
       android:id="@+id/headImage"
       android:layout_width="@dimen/head_size"
       android:layout_height="@dimen/head_size"
       android:src="@drawable/icon_photo_new"
       />
       
   </LinearLayout> 
   
   <EditText 
       android:id="@+id/edit_ndsame"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:hint="昵称"
       android:textColor="@color/text_system_default_two"
       android:textSize="14sp"
       android:layout_marginTop="20dip"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip"
       android:background="@drawable/edit_cornor"
       android:paddingLeft="15dip"
       android:layout_marginBottom="5dip"
       android:maxLength="25"
       android:singleLine="true"
       android:visibility="gone"
       />
   
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/edit_cornor" 
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        >
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:gravity="center"
        android:layout_marginLeft="15dip"
        android:hint="昵称"
        android:textColor="@color/text_system_default_two"
        />      
        
   <EditText 
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:background="@color/transparent"
        android:textSize="14sp"  
        android:singleLine="true"
        />        
    </LinearLayout>   
   
   <TextView 
       android:id="@+id/text_error_nickname"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="此昵称已被注册"
       android:layout_marginLeft="12dip"
       android:textColor="@color/red"
       android:visibility="gone"
       />
   
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/password_cornor" 
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        >
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:gravity="center"
        android:layout_marginLeft="15dip"
        android:hint="性别"
        android:textColor="@color/text_system_default_two"   
        />      
        
   <TextView 
        android:id="@+id/text_gender"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:drawableRight="@drawable/arrows"
        />        
    </LinearLayout>  
    
   <TextView 
       android:id="@+id/text_error_gender" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请选择性别"
       android:layout_marginLeft="12dip"
       android:textColor="@color/red"
       android:visibility="gone"
       /> 
    
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/password_cornor" 
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        >
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:gravity="center"
        android:layout_marginLeft="15dip"
        android:hint="生日"
        android:textColor="@color/text_system_default_two"  
        />      
        
   <TextView 
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:drawableRight="@drawable/arrows"
        />        
    </LinearLayout>
    
 <TextView 
       android:id="@+id/text_error_date" 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请选择出生日期"
       android:layout_marginLeft="12dip"
       android:textColor="@color/red"
       android:visibility="gone" 
       />
    
  <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/password_cornor" 
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip" 
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        >
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:gravity="center"
        android:layout_marginLeft="15dip"
        android:hint="城市"
        android:textColor="@color/text_system_default_two"  
        />      
        
   <TextView 
        android:id="@+id/text_city"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:drawableRight="@drawable/arrows"
        />        
    </LinearLayout>
    
  <TextView 
       android:id="@+id/text_error_city"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请选择城市"
       android:layout_marginLeft="12dip"
       android:textColor="@color/red"
       android:visibility="gone"
       />
   
    
    <include layout="@layout/view_button"/>
    
    
    
     </LinearLayout>     
   </ScrollView>
</LinearLayout>
