<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme_color"
    >
    
   <include layout="@layout/title_common"/>
   
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/white"
       >
   
  <EditText 
      android:id="@+id/edit"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:lines="5"
      android:background="@color/transparent"
      android:hint="输入"
      android:gravity="top"
      android:padding="10dip"
      /> 
      
  <View 
       android:layout_width="match_parent"
       android:layout_height="1dip"
       android:background="@color/line_two"
       />   
   
   <TextView 
       android:id="@+id/text_address"
       android:layout_width="match_parent"
       android:layout_height="@dimen/setting_text_height"
       android:text="所在位置"
       android:drawableRight="@drawable/arrows"
       android:drawableLeft="@drawable/icon_address"
       android:gravity="center|left"
       android:paddingLeft="10dip"
       android:drawablePadding="5dip"
       android:textSize="16sp"  
       android:layout_marginRight="5dip"
       />   
  
   <View 
       android:layout_width="match_parent"
       android:layout_height="1dip"
       android:background="@color/line_two"
       /> 
    
   
    <TextView 
       android:id="@+id/text_show"
       android:layout_width="match_parent"
       android:layout_height="@dimen/setting_text_height"
       android:text="公开"
       android:gravity="center|left"
       android:paddingLeft="10dip"
       android:drawablePadding="5dip"
       android:textSize="16sp"  
       android:layout_marginRight="5dip"
       android:textColor="@color/text_system_default"
       android:drawableLeft="@drawable/icon_see"
       />   
   
  </LinearLayout> 
  
   <View 
       android:layout_width="match_parent"
       android:layout_height="1dip"
       android:background="@color/line_two"
       />
  
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/white"
       android:gravity="center_vertical"
       >
       
    <TextView 
       android:id="@+id/texdgast"
       android:layout_width="wrap_content"
       android:layout_height="@dimen/setting_text_height"
       android:text="同步到"
       android:gravity="center|left"
       android:paddingLeft="10dip"
       android:drawablePadding="5dip"
       android:textSize="16sp"  
       android:layout_marginRight="5dip"
       android:textColor="@color/black"
       />        
       
    <ImageView 
        android:id="@+id/image_sina"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:background="@drawable/sina_round"
        android:layout_marginLeft="10dip"
        />
    
   <ImageView 
        android:id="@+id/image_chat"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:background="@drawable/weixin_round"
        android:layout_marginLeft="10dip"
        />  
    
      
   <ImageView 
        android:id="@+id/image_qq"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:background="@drawable/qq_round"
        android:layout_marginLeft="10dip"
        />   
   
       
   </LinearLayout>
  
  <com.uphealth.cn.widget.MyGridView 
      android:id="@+id/gridView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:numColumns="4"
      android:layout_margin="10dip"
      android:verticalSpacing="10dip"
      ></com.uphealth.cn.widget.MyGridView>
  
    
      </LinearLayout>    
   </ScrollView>
   
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="bottom"
       >
     
   <Button 
       android:id="@+id/next"  
       android:layout_width="match_parent"
       android:layout_height="50dip" 
       android:background="@color/text_main" 
       android:text="发布"
       android:textColor="@color/white"
       />       
        
       
   </LinearLayout>

</LinearLayout>
