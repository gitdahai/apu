<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme_color"
    >
    
   <include layout="@layout/title_back"/>
    
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/white"
       >
       
  <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        
    <ImageView 
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:background="@drawable/icon_weixin_two"
        android:layout_margin="10dip"
        />  
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"
        android:gravity="center"
        />      
        
   <TextView 
        android:id="@+id/text_weixin_bind"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="已绑定"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:drawableRight="@drawable/arrows"
        />        
    </LinearLayout>    
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_two"
        />      
       
       
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="65dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
   
    <ImageView 
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:background="@drawable/icon_qq_two"
        android:layout_margin="10dip"
        />      
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:text="QQ"
        android:gravity="center"
        />      
        
   <TextView 
        android:id="@+id/text_qq_bind"   
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="已绑定"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:drawableRight="@drawable/arrows"
        />        
    </LinearLayout>    
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_two"
        />      
           
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
   
   <ImageView 
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:background="@drawable/icon_sina_two"
        android:layout_margin="10dip"
        />             
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:text="新浪微博"
        android:gravity="center"
        />      
        
   <TextView 
        android:id="@+id/text_sina_bind"  
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="已绑定"
        android:gravity="center|right"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        android:drawableRight="@drawable/arrows"
        />        
    </LinearLayout>    
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_two"
        />      
       
   </LinearLayout> 
   
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="绑定后，您可以与朋友分享健康体验"
       android:layout_margin="10dip"
       />
    

</LinearLayout>
