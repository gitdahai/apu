<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/theme_color"
    >
    
    <include layout="@layout/title_back"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        
    <ImageView 
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@drawable/icon_photo_new"
        android:layout_margin="10dip"
       />     
        
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="通过几个问题找到您健康问题的原因"
       android:textSize="16sp"
       /> 
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@drawable/edit_cornor"  
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"  
        >
   
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身高"
        android:textSize="14sp"
        android:textColor="@color/text_system_default_two"
        android:layout_marginLeft="24px"
        />     
    
    <TextView 
       android:id="@+id/edit_height"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:textSize="14sp"
       android:background="@color/transparent"
       android:paddingLeft="10dip"
       android:hint="厘米"
       android:gravity="right|center"
       android:layout_marginRight="24px"
       android:singleLine="true"
       android:inputType="phone"
       />
    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dip"
         android:layout_marginLeft="10dip"
         android:layout_marginTop="10dip"
         android:background="@drawable/edit_cornor"
         android:layout_weight="1"
         >
         
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前体重"
        android:layout_marginLeft="24px"  
        android:textSize="14sp"
        android:textColor="@color/text_system_default_two"  
        />     
         
     <TextView 
       android:id="@+id/edit_weight"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:hint="公斤"
       android:textSize="14sp"
       android:gravity="right|center"
       android:background="@color/transparent"
       android:layout_marginRight="12px"
       android:singleLine="true"  
       android:phoneNumber="true"
       />          
         
     </LinearLayout>   
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dip"
         android:layout_weight="1"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:layout_marginTop="10dip"  
         android:background="@drawable/edit_cornor"
         >
        
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标体重"
        android:layout_marginLeft="24px"  
        android:textSize="14sp"
        android:textColor="@color/text_system_default_two"    
        />       
         
     <TextView 
       android:id="@+id/edit_goal_weight"
       android:layout_width="match_parent"
       android:layout_height="50dip"
       android:hint="公斤"
       android:textSize="14sp"
       android:layout_weight="1"
       android:background="@color/transparent"
       android:gravity="right|center"
       android:layout_marginRight="12px"
       android:singleLine="true" 
       android:phoneNumber="true" 
       />     
       
     </LinearLayout>
        
    </LinearLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的健康标签"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="10dip"
        />
    
    <!-- gridView -->
    <GridView 
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dip"
        android:verticalSpacing="10dip"
        android:horizontalSpacing="5dip"
        android:numColumns="4"
        ></GridView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
        
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         >
     <TextView 
         android:id="@+id/text_look"
         android:layout_width="150dip"
         android:layout_height="wrap_content"
         android:text="先看看"
         android:textColor="@color/text_main"
         android:gravity="left"  
         />     
         
     <TextView 
         android:id="@+id/text_test"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="体质测试"
         android:textColor="@color/text_main"
         android:gravity="right"
         android:layout_gravity="right"
         /> 
     </LinearLayout>   
        
     <include layout="@layout/view_button"/>
        
    </LinearLayout>
    

</LinearLayout>
