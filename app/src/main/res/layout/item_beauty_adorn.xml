<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/edit_cornor"
    >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能量早餐，减肥也要吃饱饱"
        android:layout_margin="10dip"
        android:textSize="16sp"
        />
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="140dip"
        >
        
    <ImageView 
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:background="@drawable/list_test_01"
        android:scaleType="fitXY"
        />    
        
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深度清洁，睡眠保湿"
        android:layout_marginTop="10dip"
        android:textSize="16sp"
        />    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        >
     
     <com.uphealth.cn.widget.MyGridView 
         android:id="@+id/item_gridView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:numColumns="2"
         android:verticalSpacing="10dip"
         android:horizontalSpacing="10dip"
         ></com.uphealth.cn.widget.MyGridView>   
        
        
    </LinearLayout>    
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dip"
        >
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:gravity="center"
        >
        
   <TextView
        android:id="@+id/text_publish"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:text="#发布#护肤"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginRight="10dip"
        android:background="@drawable/button_gray"
        android:textSize="16sp"
        />        
        
    </LinearLayout>    
        
   
    <LinearLayout 
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/button_gray"
        >
        
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:text="查看详情"
        android:drawableLeft="@drawable/icon_see"
        android:textSize="16sp"
        android:gravity="center"
        android:drawablePadding="10dip"
        />        
        
    </LinearLayout>    
        
        
    </LinearLayout>
    
    </LinearLayout>
    
    

</LinearLayout>
